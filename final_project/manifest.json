{
    "name": "ChatGPT Chrome Extension",
    "version": "1.0.0",
    "manifest_version": 3,
    "description": "A Chrome extension that utilizes OpenAI's GPT-3 API to generate chatbot responses",
    "permissions": [
        "activeTab",
        "storage", 
        "scripting"
    ],
    "host_permissions": [
        "https://api.openai.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon_16.png",
            "32": "icons/icon_32.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icons/icon_16.png",
        "32": "icons/icon_32.png"
    }
}